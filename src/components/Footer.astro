<script is:inline>
  const buttonMsg = document.querySelector(".button-msg");

  const copyContent = async () => {
    try {
      await navigator.clipboard.writeText("lucasmatiasblanco@outlook.com");
      buttonMsg.textContent = "copied to the clipboard";
    } catch (err) {
      console.error("Failed to copy: ", err);
    }
  };
</script>
