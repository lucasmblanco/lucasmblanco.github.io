---
import Bio from "../../components/Bio.astro";
import Footer from "../../components/Footer.astro";
import MainFrame from "../../components/MainFrame.astro";
import Nav from "../../components/Nav.astro";
import ToggleTheme from "../../components/ToggleTheme.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <header
    class="mx-auto grid w-[98%] grid-flow-col justify-between px-4 py-2 text-sm md:text-base"
  >
    <p class="text-anim block">LUCAS BLANCO</p>
    <ToggleTheme />
    <p class="text-anim block">WEB DEVELOPER</p>
  </header>
  <Nav />
  <main class="mx-auto mb-24 grid w-[98%] place-content-center py-5">
    <MainFrame />
    <Bio />
  </main>
  <Footer />
</Layout>
<script>
  import { gsap } from "gsap";

  // const pElements = document.querySelectorAll();
  gsap.from(".text-anim", {
    duration: 2.5,
    x: -300,
    opacity: 0,
    ease: "power1.inOut",
  });

  gsap.from(".footer-anim", {
    duration: 2.5,
    x: "-100%",
    opacity: 0,
    ease: "power1.inOut",
  });

  gsap.from(".text-anim-reverse", {
    duration: 2.5,
    x: 300,
    opacity: 0,
    ease: "power1.inOut",
  });
</script>
