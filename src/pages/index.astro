---
import Bio from "../components/Bio.astro";
import Footer from "../components/Footer.astro";
import MainFrame from "../components/MainFrame.astro";
import Nav from "../components/Nav.astro";
import Projects from "../components/Projects.astro";
import ToggleTheme from "../components/ToggleTheme.astro";
import Layout from "../layouts/Layout.astro";

/// cosas que retiro: w-base-width; max-w-[40em]; mx-auto
/// main old class="mx-auto mb-24 grid max-w-[1000px] place-content-center gap-24 px-8 lg:gap-44"
---

<Layout title="Lucas Blanco">
  <header
    class="sticky top-0 z-0 mx-auto grid grid-flow-col justify-between px-4 py-2 dark:text-pure-white"
  >
    <div class="font-clash text-xs font-bold md:text-base">
      <p class="text-anim block">LUCAS BLANCO</p>
      <p class="text-anim block">WEB DEVELOPER</p>
      <ToggleTheme />
    </div>
    <Nav />
    <!-- <ToggleTheme /> -->
  </header>

  <main
    class="mx-auto grid w-[80vw] max-w-[1000px] grid-flow-row gap-12 pb-24 md:gap-24"
  >
    <MainFrame />
    <Bio />
    <Projects />
  </main>
  <Footer />
</Layout>
<script>
  import { gsap } from "gsap";
  gsap.from(".text-anim", {
    rotation: 0.01,
    duration: 1,
    x: -300,
    opacity: 0,
    ease: "power1.inOut",
  });
</script>
